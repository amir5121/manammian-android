<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:elevation="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <include layout="@layout/include_manam_miam" />

            <!--<ImageView-->
                <!--android:id="@+id/fragment_enroll_btn_close"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_gravity="end|center_vertical"-->
                <!--android:contentDescription="@string/close"-->
                <!--android:foreground="?android:selectableItemBackground"-->
                <!--android:padding="12dp"-->
                <!--android:src="@drawable/ic_close" />-->

        </FrameLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="vertical">


                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.amir.manammiam.infrastructure.customView.EditTextFont
                            android:id="@+id/fragment_enroll_edit_username"
                            style="@style/editTextIranSans"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/edit_text_default_margin"
                            android:drawableLeft="@drawable/ic_search_colored"
                            android:drawablePadding="8dp"
                            android:drawableStart="@drawable/ic_search_colored"
                            android:hint="@string/username"
                            android:padding="@dimen/edit_text_default_padding" />

                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.amir.manammiam.infrastructure.customView.EditTextFont
                            android:id="@+id/fragment_enroll_edit_password"
                            style="@style/editTextIranSans"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/edit_text_default_margin"
                            android:drawableLeft="@drawable/ic_key_colored"
                            android:drawablePadding="8dp"
                            android:drawableStart="@drawable/ic_key_colored"
                            android:hint="@string/password"
                            android:inputType="textPassword"
                            android:padding="@dimen/edit_text_default_padding" />

                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.amir.manammiam.infrastructure.customView.EditTextFont
                            android:id="@+id/fragment_enroll_edit_password_repeat"
                            style="@style/editTextIranSans"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/edit_text_default_margin"
                            android:drawableLeft="@drawable/ic_key_colored"
                            android:drawablePadding="8dp"
                            android:drawableStart="@drawable/ic_key_colored"
                            android:hint="@string/repeat_password"
                            android:inputType="textPassword"
                            android:padding="@dimen/edit_text_default_padding" />


                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.amir.manammiam.infrastructure.customView.EditTextFont
                            android:id="@+id/fragment_enroll_edit_name"
                            style="@style/editTextIranSans"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/edit_text_default_margin"
                            android:drawableLeft="@drawable/ic_profile_colored"
                            android:drawablePadding="8dp"
                            android:drawableStart="@drawable/ic_profile_colored"
                            android:hint="@string/name"
                            android:padding="@dimen/edit_text_default_padding" />

                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.amir.manammiam.infrastructure.customView.EditTextFont
                            android:id="@+id/fragment_enroll_edit_email"
                            style="@style/editTextIranSans"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/edit_text_default_margin"
                            android:drawableLeft="@drawable/ic_inbox_colored"
                            android:drawablePadding="8dp"
                            android:drawableStart="@drawable/ic_inbox_colored"
                            android:hint="@string/email"
                            android:inputType="textEmailAddress"
                            android:padding="@dimen/edit_text_default_padding" />

                    </android.support.design.widget.TextInputLayout>

                    <Button
                        android:id="@+id/fragment_enroll_btn_gender"
                        style="@style/Base.Widget.AppCompat.Button.Borderless"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="15dp"
                        android:background="@color/male_color"
                        android:drawableLeft="@drawable/ic_gender"
                        android:drawableStart="@drawable/ic_gender"
                        android:foreground="?android:selectableItemBackground"
                        android:padding="5dp"
                        android:text="@string/male"
                        android:textColor="#FFF"
                        android:textSize="17sp" />

                    <Button
                        android:id="@+id/fragment_enroll_btn_enroll"
                        style="@style/Base.Widget.AppCompat.Button.Borderless"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_margin="15dp"
                        android:background="@drawable/round_green_button"
                        android:elevation="2dp"
                        android:enabled="false"
                        android:foreground="?android:selectableItemBackground"
                        android:padding="5dp"
                        android:text="@string/enroll"
                        android:textColor="#FFF"
                        android:textSize="17sp" />

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>


    <FrameLayout
        android:id="@+id/fragment_enroll_loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:focusable="true"
        android:visibility="gone"
        android:background="@color/transparent_light">

        <ProgressBar
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </FrameLayout>


</android.support.v7.widget.CardView>
