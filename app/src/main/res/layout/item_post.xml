<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_post_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:descendantFocusability="blocksDescendants"
    android:foreground="?android:selectableItemBackground">

    <LinearLayout
        android:id="@+id/item_post_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:elevation="2dp"
        android:orientation="horizontal">

        <com.amir.manammiam.infrastructure.customView.TextViewFont
            android:id="@+id/item_post_text_source"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:padding="5dp"
            android:text="@string/source"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <com.amir.manammiam.infrastructure.customView.TextViewFont
            android:id="@+id/item_post_text_price"
            android:layout_width="0dp"
            android:paddingBottom="1dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="2dp"
            android:text="@string/price"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <com.amir.manammiam.infrastructure.customView.TextViewFont
            android:id="@+id/item_post_text_destination"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:padding="5dp"
            android:text="@string/destination"
            android:textColor="@color/white"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/item_post_mid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_post_top"
        android:orientation="horizontal">

        <com.amir.manammiam.infrastructure.customView.TextViewFont
            android:id="@+id/item_post_text_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:padding="5dp"
            android:text="Amir"
            android:textSize="15sp" />

        <com.amir.manammiam.infrastructure.customView.TextViewFont
            android:id="@+id/item_post_text_text"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center"
            android:padding="5dp"
            android:text="Wanna come with?"
            android:textSize="16sp" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/item_post_info_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_below="@id/item_post_mid"
        android:orientation="vertical">

        <RatingBar
            android:id="@+id/item_post_rate_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:clickable="false"
            android:focusable="false"
            android:isIndicator="true"
            android:numStars="5"
            android:rating="3.5"
            android:scaleX=".95"
            android:scaleY=".95"
            android:stepSize=".1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.amir.manammiam.infrastructure.customView.TextViewFont
                android:id="@+id/item_post_text_car_type"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:alpha=".9"
                android:gravity="center"
                android:padding="2dp"
                android:text="Peogeot"
                android:textSize="13sp" />

            <com.amir.manammiam.infrastructure.customView.TextViewFont
                android:id="@+id/item_post_text_car_color"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:alpha=".9"
                android:gravity="center"
                android:padding="2dp"
                android:text="Blue"
                android:textSize="13sp" />

            <com.amir.manammiam.infrastructure.customView.TextViewFont
                android:id="@+id/item_post_text_car_code"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:alpha=".9"
                android:gravity="center"
                android:padding="2dp"
                android:text="۷۸ ح ۳۴۵ ۳۴"
                android:textSize="13sp" />


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/item_post_very_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_below="@id/item_post_info_container"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:orientation="horizontal">


            <com.amir.manammiam.infrastructure.customView.TextViewFont
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha=".9"
                android:gravity="end"
                android:padding="2dp"
                android:text="@string/capacity"
                android:textSize="14sp"/>

            <com.amir.manammiam.infrastructure.customView.TextViewFont
                android:id="@+id/item_post_text_capacity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha=".9"
                android:gravity="start"
                android:padding="2dp"
                android:text="5"
                android:textSize="15sp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/item_post_expand"
            android:clickable="true"
            android:layout_width="0dp"
            android:padding="3dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:foreground="?android:selectableItemBackground"
            android:src="@drawable/ic_expand_more" />

        <com.amir.manammiam.infrastructure.customView.TextViewFont
            android:id="@+id/item_post_text_time"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:alpha=".9"
            android:gravity="center"
            android:padding="2dp"
            android:text="1396\/09\/29 20:30"
            android:textSize="13sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/item_post_approval_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_alignBottom="@id/item_post_very_bottom"
        android:layout_below="@id/item_post_top"
        android:background="#b0000000"
        android:orientation="horizontal"
        android:visibility="gone">

        <com.amir.manammiam.infrastructure.customView.TextViewFont
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:foreground="?android:selectableItemBackground"
            android:gravity="center"
            android:padding="4dp"
            android:text="@string/no"
            android:textColor="@color/red"
            android:textSize="18sp" />

        <com.amir.manammiam.infrastructure.customView.TextViewFont
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:clickable="true"
            android:elevation="4dp"
            android:gravity="center"
            android:padding="5dp"
            android:text="@string/reserve"
            android:textColor="@color/white"
            android:textSize="35sp" />

        <com.amir.manammiam.infrastructure.customView.TextViewFont
            android:id="@+id/item_post_text_accept"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:foreground="?android:selectableItemBackground"
            android:gravity="center"
            android:padding="4dp"
            android:text="@string/yes"
            android:textColor="@color/green"
            android:textSize="18sp" />

    </LinearLayout>

</RelativeLayout>
