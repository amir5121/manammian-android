<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!--<inamename="colorControlHighlight">@color/colorPrimaryRipple</item>-->
    </style>

    <style name="buttonMoharram" parent="@android:style/Widget.Button">
        <item name="com.amir.manammiam:font">fonts/moharram.ttf</item>
    </style>

    <style name="buttonIranSans" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="com.amir.manammiam:font">fonts/IRANSans_Medium.ttf</item>
    </style>

    <style name="textViewMoharam" parent="@android:style/Widget.TextView">
        <item name="com.amir.manammiam:font">fonts/moharram.ttf</item>
    </style>

    <style name="textViewIranSans" parent="@android:style/Widget.TextView">
        <item name="com.amir.manammiam:font">fonts/IRANSans_Medium.ttf</item>
    </style>

    <style name="bottomBarStyle" parent="@android:style/Widget.TextView">
        <item name="com.amir.manammiam:font">fonts/IRANSans_Medium.ttf</item>
        <item name="android:textSize">@dimen/text_very_small</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">2dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="BottomBarItem">
        <item name="android:layout_weight">1</item>
        <item name="android:scaleX">.7</item>
        <item name="android:scaleY">.7</item>
        <item name="android:alpha">.85</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="editTextIranSans" parent="@android:style/Widget.EditText">
        <item name="com.amir.manammiam:font">fonts/IRANSans_Medium.ttf</item>
    </style>

    <style name="myRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/passenger_bar</item>
        <item name="android:indeterminateDrawable">@drawable/passenger_bar</item>
        <item name="android:minHeight">25dip</item>
        <item name="android:maxHeight">26dip</item>
    </style>

</resources>
